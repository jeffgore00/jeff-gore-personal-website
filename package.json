{
  "name": "jeff-gore-personal-website",
  "version": "0.1.0",
  "description": "Jeff Gore's personal website.",
  "homepage": "(none currently)",
  "author": "Jeff Gore",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/jeffgore00/jeff-gore-personal-website.git"
  },
  "engines": {
    "node": "18.16.1"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts"
    ],
    "watch": [
      "src/server",
      "src/shared",
      "content"
    ],
    "ext": "js,ts,json,tsx",
    "exec": "node -r ts-node/register --unhandled-rejections=strict"
  },
  "scripts": {
    "build": "npm run build:client && npm run build:server && npm run build:content",
    "build:dev": "NODE_ENV=development npm run build:client",
    "build:dev:offline": "BUILD_OFFLINE=true npm run build:dev",
    "build:content": "rm -rf dist/content && npm run write-single-blog-entry-files && npm run write-blog-preview-files",
    "build:client": "webpack",
    "build:server": "rm -rf dist/server && tsc --project tsconfig.server.json && node dist/src/server/utils/build/edit-server-status-file/index.js",
    "lint": "eslint \"**\"",
    "prettier": "prettier '**/*.js' '**/*.ts' '**/*.tsx' '**/*.json' '**/*.md' '**/*.html'",
    "prettier:fix": "npm run prettier -- --write",
    "prettier:check": "npm run prettier -- --check",
    "release": "standard-version",
    "send-codecov-report": "sh scripts/send-codecov-report.sh",
    "start": "NODE_ENV=production node dist/src/server/index.js --unhandled-rejections=strict",
    "start:local:prodlike": "PRODLIKE=true npm run build && PRODLIKE=true npm start",
    "start:dev": "concurrently -p \"[{name}]\" -n static,___app -c \"magenta,cyan\" \"NODE_ENV=development webpack serve --open\" \"NODE_ENV=development nodemon src/server/index.ts\" --kill-others",
    "start:dev:offline": "BUILD_OFFLINE=true npm run start:dev",
    "selenium": "docker run -it -p 4444:4444 vvoyer/selenium-standalone",
    "test": "npm run test:unit-and-api && npm run lint && npm run prettier:check && npm run test:spellcheck",
    "test:unit-and-api": "NODE_ENV=test jest --runInBand",
    "test:unit": "NODE_ENV=test jest --runInBand --testPathIgnorePatterns api.test browser.test",
    "test:api": "NODE_ENV=test jest --runInBand --testPathPattern api.test",
    "test:browser:base": "NODE_ENV=test wdio wdio.conf.js",
    "test:browser:cleanup": "rm wdio.conf.js",
    "test:browser": "sh scripts/test-browser.sh",
    "test:spellcheck": "spellchecker -d .spellcheck-ignore.js --files \"**/*.md\" \"!CHANGELOG.md\" --no-suggestions",
    "test:full:local": "npm run test:browser -- -c --headless && npm test",
    "test:browser:prod": "npm run test:browser -- -c --headless -e prod",
    "type-check": "tsc --noEmit --project tsconfig.json --skipLibCheck",
    "write-single-blog-entry-files": "node -r ts-node/register src/server/utils/build/write-single-blog-entry-files/index.ts",
    "write-blog-preview-files": "node -r ts-node/register src/server/utils/build/write-blog-preview-files/index.ts",
    "postinstall": "husky install",
    "posttest:unit-and-api": "if [ \"$CI\" = \"true\" ]; then npm run send-codecov-report; fi",
    "pretest:browser": "tsc wdio.conf.ts --typeRoots ./node_modules/@types/wdio --resolveJsonModule --esModuleInterop"
  },
  "dependencies": {
    "@emotion/react": "^11.9.0",
    "@emotion/styled": "^11.8.1",
    "@mui/material": "^5.6.0",
    "cors": "2.8.5",
    "date-fns": "2.22.1",
    "express": "4.18.2",
    "helmet": "^7.0.0",
    "html-react-parser": "^4.0.0",
    "morgan": "1.10.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-media": "1.10.0",
    "react-router-dom": "^6.2.1",
    "serialize-error": "8.1.0",
    "styled-components": "^6.0.5",
    "ts-node": "^10.8.0",
    "typescript": "^5.1.3",
    "winston": "3.3.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.0",
    "@commitlint/config-conventional": "^17.0.0",
    "@testing-library/react": "^14.0.0",
    "@types/cors": "^2.8.10",
    "@types/express": "4.17.12",
    "@types/jasmine": "^4.0.0",
    "@types/jest": "^29.0.0",
    "@types/morgan": "1.9.2",
    "@types/node": "^18.11.11",
    "@types/react": "^18.0.1",
    "@types/react-dom": "^18.0.0",
    "@types/supertest": "2.0.11",
    "@types/webpack-bundle-analyzer": "4.4.1",
    "@types/webpack-dev-server": "^4.1.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@wdio/cli": "^8.0.9",
    "@wdio/jasmine-framework": "^8.0.9",
    "@wdio/local-runner": "^8.0.9",
    "@wdio/spec-reporter": "^8.0.8",
    "@wdio/types": "^8.0.8",
    "chalk": "4.1.1",
    "chromedriver": "^114.0.1",
    "compression-webpack-plugin": "^10.0.0",
    "concurrently": "^8.0.1",
    "eslint": "^8.6.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^27.0.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "html-webpack-plugin": "5.3.2",
    "husky": "^8.0.1",
    "jest": "^29.0.3",
    "jest-environment-jsdom": "^29.0.3",
    "jest-styled-components": "^7.0.5",
    "lint-staged": "^13.0.0",
    "nodemon": "^3.0.1",
    "prettier": "2.3.2",
    "source-map-loader": "^4.0.0",
    "spellchecker-cli": "^6.0.2",
    "standard-version": "9.3.0",
    "supertest": "^6.2.3",
    "ts-jest": "^29.0.0",
    "ts-loader": "^9.3.0",
    "typescript-plugin-styled-components": "^3.0.0",
    "wdio-chromedriver-service": "^8.0.1",
    "webpack": "^5.76.0",
    "webpack-bundle-analyzer": "4.4.2",
    "webpack-cli": "^5.0.0",
    "webpack-dev-server": "^4.8.1",
    "yargs": "17.0.1"
  }
}

{
  "compilerOptions": {
    "sourceMap": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "module": "ESNext",
    "target": "ESNext",
    "jsx": "react",
    "lib": ["dom", "esnext"],
    "types": [
      "node",
      "express",
      "react",
      "react-dom",
      "styled-components",
      "jest",
      "@wdio/globals/types"
    ]
  },
  "include": [
    "src",
    "content",
    "test-api",
    "test-utils",
    "jest.config.ts",
    "webpack.config.ts",
    "test-browser",
    ".eslintrc.cjs"
  ]
}
